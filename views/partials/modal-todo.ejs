<!-- Modal -->
<div class="modal fade" id="todoEdit-modal" tabindex="-1" aria-labelledby="modal-title" aria-modal="true" role="dialog" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content text-center">
			<div class="modal-header">
				<h3 class="modal-title text-success" id="modal-title">Update your task</h3>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body px-4 py-4">
				<form id="todoEdit-form" method="dialog" action="/todos/edit/" class="form-group mx-auto gap-3">
					<input type="hidden" name="todoId" id="modalId" />
					<div class="form-floating mb-3">
						<select name="petName" id="modalPet" class="form-select"
						title="Pick a pet, or create one in the dashboard">
						<% pets.forEach( el=> { %>
							<% if (el.petName==todos.petName) {%>
								<option value="<%= el.petName %>" selected>
									<%= el.petName %>
								</option>
								<% } else { %>
									<option value="<%= el.petName %>">
										<%= el.petName %>
									</option>
									<%}%>
						<% }) %>
					</select>
					<label for="modalPet">Pet for this task:</label>
					</div>

					<!-- Date picker -->
					<div class="mb-3 text-start">
						<label for="modalDate" class="form-label">Pick a new date, or keep the current one.</label>
						<input class="form-control col-form" type="date" name="date" id="modalDate" value="<%= calendar ? calendar : new Date() %>" required>
					</div>

					<!-- FORMAT: -->
					<fieldset class="row px-2" role="radiogroup" aria-required="true">
						<legend class="text-start px-1 fs-6">Pick a pre-made task or type one below</legend>

						<%- include('todoitem-form-radio.ejs', {id: "modalradio1", value: "Feed pet", imglink: "https://www.svgrepo.com/show/295889/pet-food-paw.svg"}) %>
						
						<%- include('todoitem-form-radio.ejs', {id: "modalradio2", value: "Give fresh water", imglink: "https://www.svgrepo.com/show/36235/water.svg"}) %>
						
						<%- include('todoitem-form-radio.ejs', {id: "modalradio3", value: "Give medicine", imglink: "https://www.svgrepo.com/show/65020/medicine.svg"}) %>

						<%- include('todoitem-form-radio.ejs', {id: "modalradio4", value: "Change litter", imglink: "https://www.svgrepo.com/show/408523/cat-litter-sand.svg"}) %>

						<%- include('todoitem-form-radio.ejs', {id: "modalradio5", value: "Scoop litter", imglink: "https://www.svgrepo.com/show/408519/cat-litter-box.svg"}) %>

						<%- include('todoitem-form-radio.ejs', {id: "modalradio6", value: "Go for a walk", imglink: "https://www.svgrepo.com/show/86881/walking-the-dog.svg"}) %>

						<%- include('todoitem-form-radio.ejs', {id: "modalradio7", value: "Play!", imglink: "https://www.svgrepo.com/show/64872/cat-toy.svg"}) %>

						<!-- custom input -->
						<div class="list-group list-group-checkable d-grid border-0 px-1 w-100">
							<input type="radio" name="todoItem" id="modal-otherTodo" value="" checked class="list-group-item-check pe-none" />
							<label class="list-group-item d-flex justify-content-between rounded-3 align-items-center py-3" for="otherTodo">
								Custom task:
								<input id="modal-inputOtherTodo" type="text" class="form-control mx-2" aria-labelledby="otherTodo" value="" checked />
							</label>
						</div>
					</fieldset>
					<div class="mt-4 text-end">
						<button id="todoEdit-dismiss" type="button" class="btn btn-lg btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="submit" id="todoEdit-button" class="btn btn-lg btn-success">Submit</button>
					</div>
				</form>
			</div>
	  	</div>
	</div>
</div>